# MCP Inbox - Environment Variables Example
#
# Copy this file to .env and fill in your values.
# Without a .env the app runs in demo mode automatically.

# AI provider (optional)
# auto: Gemini first (if key exists), then Ollama
# gemini: force Gemini only
# ollama: force Ollama only
AI_PROVIDER=auto
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
OLLAMA_BASE_URL=http://localhost:11434

# App behavior
FORCE_MOCK=false
APP_BASE_URL=http://localhost:8000

# App auth/session
AUTH_SESSION_COOKIE_NAME=chatnest_session
AUTH_SESSION_TTL_HOURS=168
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AUTH_ENCRYPTION_KEY=

# Google OAuth Web App (per-user connect flow)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Slack (optional)
SLACK_BOT_TOKEN=
SLACK_DEFAULT_CHANNEL=general
SLACK_OAUTH_CLIENT_ID=
SLACK_OAUTH_CLIENT_SECRET=
SLACK_OAUTH_REDIRECT_URI=http://localhost:8000/auth/slack/callback
# Comma-separated bot scopes
SLACK_OAUTH_SCOPES=channels:history,channels:read,chat:write,groups:history,groups:read,im:history,im:read,users:read

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=

# Gmail OAuth (optional)
# For local/dev: point to files
GMAIL_CREDENTIALS_PATH=./data/credentials.json
GMAIL_TOKEN_PATH=./data/token.json
# For serverless (Vercel): set full JSON text or base64 JSON
GMAIL_CREDENTIALS_JSON=
GMAIL_TOKEN_JSON=
GMAIL_USER=me

# Telegram Personal Account (optional)
TELEGRAM_SESSION_PATH=./data/telegram_personal.session
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# Database
DATABASE_PATH=./data/mcp_inbox.db

# Proxy (optional)
# HTTPS_PROXY=socks5://127.0.0.1:9050
